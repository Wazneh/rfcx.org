  div.row-fluid.rfcx-row-gradient.rfcx-row.rfcx-row-about-2
    div.span6
      img.trash-img(src="#{rfcx_cdn}/img/about/phone-trash-side.380.png")
    div.span6
      p.roadgeek.rfcx-header= "TURNING OLD PHONES"
      p.roadgeek.rfcx-header= "INTO SECURITY GUARDS"
      p.rfcx-body
        span= "Why use old smartphones to guard the rainforest?"
        br
        br
        span= "Explaining why this is the moment when all technology converged to make this possible. Turning trash into value."

  link(rel="stylesheet",href="//libs.cartocdn.com/cartodb.js/v3/themes/css/cartodb.css")
