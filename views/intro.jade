extends layout

block content
  
  div.container-narrow.banner-video
    div.dynamic-crop-right.banner-bg(style="background-image:url(#{rfcx_cdn}/img/intro/banner-forest.1400.jpg?v=#{app_version});")
    div.video-box.video-box-page(onclick="RFCX.setupVideo(this)")
      img.rfcx-trans-linear.rfcx-trans-50.video-box-bg(src="#{rfcx_cdn}/img/intro/16x9.16.gif")
      i.rfcx-trans-linear.fa.fa-play-circle-o
    span.rfcx-unselectable.slogan
      p.roadgeek
        | PROTECTING RAINFORESTS
        br
        | WITH REAL-TIME DATA
      p.video-link
        | Watch the video to learn how
        i.fa.fa-play

  div.row-fluid.rfcx-row.rfcx-row-intro-stats
    div.span12
      p.roadgeek.rfcx-header= "FOREST DESTRUCTION IS THE SINGLE BIGGEST CONTRIBUTOR TO CLIMATE CHANGE"
      p.roadgeek.rfcx-header= "AN IMMEDIATE SOLUTION TO AN ACCELERATING PROBLEM"

  div.row-fluid.rfcx-row-gradient.rfcx-row.rfcx-row-intro-what
    div.span7
      a(href='#infoGraphic', role='button', data-toggle='modal')
        div.rfcx-trans-linear.infographic-box
          i.rfcx-trans-linear.fa.fa-plus.expand-button.expand-button-front
          i.rfcx-trans-linear.fa.fa-circle.expand-button.expand-button-rear
          img.infographic-thmb(src='/cdn/img/intro/infographic.png')
    div.span5
      p.roadgeek.rfcx-header
        | EVERY MINUTE COUNTS.
        br
        | REAL-TIME DATA MAKES
        br
        | ALL THE DIFFERENCE
      p.rfcx-body
        | We take old mobile phones, retrofit them
        br
        | to survive the elements and hide them sporadically
        br
        | in trees in threatened rainforests. 
        br
        | Powered by solar panels, the phones can
        br
        | stay charged for years, listening intently
        br
        | for the sounds of chainsaws, gunshots,
        br
        | and other noises that simply do not belong.
        br
        | When destructive activity occurs,
        br
        | we can tell in seconds exactly where
        br
        | the problem is â€” and then we
        br
        | alert local authorities who are able
        br
        | to intervene before the damage is done.


  div.row-fluid.rfcx-row-gradient.rfcx-row.rfcx-row-intro-join
    div.span7
      p.roadgeek.rfcx-header= "HELP SILENCE THE CHAINSAWS"
      p.rfcx-body
        img.stopsign-mobile(src="#{rfcx_cdn}/img/intro/stopsign.358.png?v=#{app_version}")
        | Get involved by signing up for our newsletter.
        br
        | We have some big things in the works, and we
        |  want you to always be amongst the first to know.
        | We will never sell or disclose your address to anyone else.

        form.rfcx-form#mc-embedded-subscribe-form(name="mc-embedded-subscribe-form", target="_blank", action="https://rfcx.us7.list-manage.com/subscribe/post?u=c424f3e330b7fd5c41da1f891&amp;id=d040c73f65", method="post")
          div.control-group
            div.controls
              div.input-append
                input.input-large.email#mce-EMAIL(type='text', data-type='email', id='email', name='EMAIL', placeholder='Your email', required)
                a.btn.btn-success= "Sign up"
            span.rfcx-body
              span= "For even more info, follow us on "
              span.social-names= "Facebook, Twitter and Google+."
            div.social-follow-container
              div.social-follow-item.fb-follow(data-width="300", data-show-faces="false", data-href="https://www.facebook.com/RainforestCx")
            div.social-follow-container(style="top:11px;")
              a.social-follow-item.twitter-follow-button(data-show-count="true", data-size="", href="https://twitter.com/RainforestCx")= "Follow @RainforestCx"
            div.social-follow-container
              div.social-follow-item.g-follow(data-annotation="bubble", data-height="24", data-href="//plus.google.com/110790947035627675960", data-rel="publisher")

    div.span5
      img.stopsign(src="#{rfcx_cdn}/img/intro/stopsign.358.png?v=#{app_version}")


  div.modal.hide.fade(id='infoGraphic', tabindex='-1', role='dialog', aria-labelledby='infoGraphicLabel', aria-hidden='true')
    div.modal-header
      button.close(type='button', data-dismiss='modal', aria-hidden='true')= "x"
      h3#infoGraphicLabel= "Info Graphic"
    div.modal-body
      p= "Currently using Bootstrap popup... will use more stylish fade-in YWC popup and interactive features"
    div.modal-footer
      button.btn(data-dismiss='modal',aria-hidden='true')= "Close"

