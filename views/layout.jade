      @font-face{font-family:'roadgeek';font-weight:normal;font-style:normal;src:url('#{rfcx_cdn}/font/roadgeek/roadgeek.eot');src:local('☺'),url('#{rfcx_cdn}/font/roadgeek/roadgeek.woff')format('woff'),url('#{rfcx_cdn}/font/roadgeek/roadgeek.ttf')format('truetype'),url('#{rfcx_cdn}/font/roadgeek/roadgeek.svg')format('svg');}
    link(rel='stylesheet', type='text/css', href='#{rfcx_cdn}/css/rfcx-main.css?v=#{app_version}')
    link(rel='stylesheet', type='text/css', href='#{rfcx_cdn}/css/rfcx-mobile.css?v=#{app_version}', media='all and (max-device-width: 480px)')
    link(rel='stylesheet', type='text/css', href='#{rfcx_cdn}/css/rfcx-mobile-landscape.css?v=#{app_version}', media='all and (max-device-width: 480px) and (orientation:landscape)')
    script(type='text/javascript', src='#{rfcx_cdn}/js/rfcx-preload.js?v=#{app_version}')
  body.helvetica
    div.container-narrow#rfcx-container

      div.rfcx-unselectable.rfcx-trans-linear.masthead
        div.dynamic-crop-right.masthead-bg(style="background-image:url(#{rfcx_cdn}/img/masthead/masthead-bg.1400.jpg?v=#{app_version});")
        if (!current_page[5])
          a.menu-toggle
            i.fa.fa-bars
          ul.rfcx-trans-linear.nav.nav-pills.pull-right
            for item in nav_items
              if ((item[0] == current_page[0]) && item[4])
                li.active
                  a= item[1]
                  i.fa.fa-sort-up(id="masthead-notch-#{item[0]}")
              else if (item[4])
                li
                  if (item[2].indexOf("://") != -1)
                    a.hover-trans-67.rfcx-trans-linear(target="_blank",href="#{item[2]}")= item[1]
                  else
                    a.hover-trans-67.rfcx-trans-linear(href="#{item[2]}")= item[1]
            li
              a.hover-trans-67.rfcx-trans-linear(href="#contact", role="button", data-toggle="modal")= "Contact"
        a
          img.logo(src="#{rfcx_cdn}/img/masthead/masthead-logo-white.560.png?v=#{app_version}")

      block content

      div.footer.lucida
        div.footer-bg.dynamic-crop-right
        div.container-narrow
          ul.nav.nav-pills.pull-left
            li.cp
              span.copyright
                | &copy;2014 Rainforest Connection &#0153;

            li.ft
              img.logo-footer-shuttleworth.rfcx-crnr-5(src="#{rfcx_cdn}/img/masthead/shuttleworth-funded.156.png?v=#{app_version}")

          for item in social_media
            a.pull-right.hint--rounded(class=((1+social_media.indexOf(item)) % 2) ? "hint--top" : "hint--bottom", target="_blank",href="#{item[1]}", data-hint="#{item[3]}", )
              i.footer-social.rfcx-trans-linear.fa(class="fa-#{item[2]}")

    div.modal.hide.fade(id='contact', tabindex='-1', role='dialog', aria-labelledby='contact-label', aria-hidden='true')
      div.modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true')
          i.fa.fa-times
        h3#contact-label= "Contact"
      div.modal-body
        div.rfcx-crnr-5.rfcx-trans-linear.rfcx-contact-sctn(onClick="parent.location='mailto:contact@rfcx.org';")
          span.lbl
            i.fa.fa-inbox
            | Email:
          div.bdy
            | contact@rfcx.org
        div.rfcx-crnr-5.rfcx-trans-linear.rfcx-contact-sctn.mobile-exclude(onClick="RFCX.forceOlark();")
          span.lbl
            i.fa.fa-comment
            | LiveChat:
          div.bdy
            | Click to Launch
        div.rfcx-crnr-5.rfcx-trans-linear.rfcx-contact-sctn(onClick="parent.location='tel:+14153359205';")
          span.lbl
            i.fa.fa-phone-square
            | Phone:
          div.bdy
            | +1 (415) 335-9205
        div.rfcx-crnr-5.rfcx-trans-linear.rfcx-contact-sctn.rfcx-contact-sctn-long(onClick="window.open('http://r-f.cx/1eOnizB');")
          span.lbl
            i.fa.fa-envelope
            | Mailing Address:
          div.bdy
            | 77 Van Ness Ave, Suite 101-1717
            br
            | San Francisco, CA, 94102, USA
        for item in social_media
          - var i = social_media.length-1-social_media.indexOf(item)
          div.rfcx-crnr-5.rfcx-trans-linear.rfcx-contact-sctn.rfcx-contact-sctn-social(onClick="window.open('#{social_media[i][1]}');")
            span.lbl
              i.fa(class="fa-#{social_media[i][2]}")
              | <br />#{social_media[i][4]}#{ind}
      div.modal-footer
        button.btn(data-dismiss='modal',aria-hidden='true')= "Close"

    div#rfcx-menu-mobile
      div.menu-bg
      ul
        li.roadgeek.header.rfcx-trans-67(style="background-image:url(#{rfcx_cdn}/img/masthead/masthead-bg.1400.jpg?v=#{app_version});")
          span= "Rainforest Connection"
          img.logo(src="#{rfcx_cdn}/img/masthead/masthead-logo-white.560.png?v=#{app_version}")
        for item in nav_items
          if ((item[0] == current_page[0]) && item[4])
            a(href="#")
              li.roadgeek.active= item[1]
          else if (item[4])
            a(href="#{item[2]}")
              li.roadgeek= item[1]
        a(href="#contact", role="button", data-toggle="modal")
          li.roadgeek= "Contact"

