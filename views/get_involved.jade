extends layout

block content

  section.content.content_involved
    .content__i
      include common/help-silence-title

      div.row-fluid.rfcx-row-gradient.rfcx-row.rfcx-row-get_involved-2(style="text-align:center;")
        div.span4.col-sign-up
          p.roadgeek.rfcx-header= __("Stay informed")
          .rfcx-body
            | Sign up for our newsletter.
            br.only-desktop
            | Big things are in the works, and
            br.only-desktop
            | we want you to be the first to know.
            br.only-desktop
            | We will never sell or disclose
            br.only-desktop
            | your address to anyone else.

            include common/email-signup-form

        hr.mobile-only

        div.span4
          p.roadgeek.rfcx-header= __("Donate money")
          p.rfcx-body
            span!= __('Make a real impact. Help us grow. %s', '<br class="only-desktop">')
            span!= __('As a bootstrapped startup, financial %sdonations are the single most impactful. %sContribution you can make to our cause, %sand making a donation is fast and easy.', '<br class="only-desktop">', '<br class="only-desktop">', '<br class="only-desktop">')
          div.control-group
            include common/donate-form

        hr.mobile-only

        div.span4
          p.roadgeek.rfcx-header= __("Donate a phone")
          .rfcx-body.donate-phone-info!= __('Mail us your old smartphone: %sRainforest Connection, 77 Van Ness Ave, Suite 101-1717, San Francisco, CA, 94102, USA%s (If for some reason  we canâ€™t use it, our partner will take it as a donation that directly funds our program work)', '<address>', '</address>')
            //span!= __('Mail us your old smartphone. %sWe\'ll erase it, retrofit it and send it %sinto the jungle for its second life %sas a tireless forest guardian.%s', '<br class="only-desktop">', '<br class="only-desktop">', '<br class="only-desktop">', '<br class="only-desktop">')


      div.modal.hide.fade(id='rfcx_donate_phone', tabindex='-1', role='dialog', aria-labelledby='rfcx_donate_phone_label', aria-hidden='true', style="width:500px;")
        div.modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true')
            i.fa.fa-times
          h3.roadgeek#rfcx_donate_phone_label= __("DONATE AN OLD SMARTPHONE")
        div.modal-body
          span= __("Mail us your old smartphone.")
          br
          br
          span= __("We'll erase it, retrofit it and send it into the jungle for its second life as a tireless forest guardian.")
          br
          br
          span= __("Please send phones to this address:")
          br
          br
          | Rainforest Connection
          br
          | 77 Van Ness Ave
          br
          | Suite 101-1717-
          br
          | San Francisco, CA, 94102
        div.modal-footer
          button.btn(data-dismiss='modal',aria-hidden='true')= __("Close")

      div.modal.hide.fade(id='make-donation', tabindex='-1', role='dialog', aria-labelledby='make-donation-label', aria-hidden='true')
        div.modal-header
          button.close(type='button', data-dismiss='modal', aria-hidden='true')
            i.fa.fa-times
          h3#make-donation-label= __('Your contribution means so much to us!')
        div.modal-body
          p(style="text-align:center;font-size:18px;font-weight:bold;")= __("Thank you!")
          div.control-group.form-donate
            div.controls
              div.left-label= __('Amount:')
              div.input-append.input-prepend
                span.add-on!= __('%sUSD%s', '<span class="currency">', '</span>')
                input.input-large#rfcx-donate-amount(type='text', data-type='number', data-required='true', name='rfcx-donate-amount', placeholder=__('USD'),value='50.00', size='7', maxlength='7')
                a.btn.btn-primary#stripe-payment-button= __("Make a Donation")

        div.modal-footer
          button.btn(data-dismiss='modal',aria-hidden='true')= __("Close")

    include common/banner-donate