extends layout-campaign

block content
  
  div.container-narrow.banner-video.campaign-video
    div.dynamic-crop-right.rfcx-trans-100.banner-bg(style="background-image:url(#{rfcx_cdn}/img/campaign/banner-forest.1400.jpg?v=#{app_version});")
    div.video-box.video-box-page(data-video-id="vid03",data-video-version="1",data-video-youtube="LyIAiqV-Oo8",data-video-cc="3",data-video-run-followup="1")
      img.rfcx-trans-linear.video-box-poster(src="#{rfcx_static_cdn}/video/vid01/vid01-poster.jpg?v=#{app_version}")
      img.rfcx-trans-linear.rfcx-trans-25.video-box-bg(src="#{rfcx_cdn}/img/intro/16x9.16.gif")
      i.rfcx-trans-linear.fa.fa-play-circle-o
    span.rfcx-unselectable#campaign-countdown
    span.rfcx-unselectable.slogan

      p.roadgeek
        | 1) 
        button.btn.large.btn-custom-facebook(style="font-size:24px;font-weight:bold;")
          i.fa.fa-facebook-square
          | Share

      p.roadgeek
        | 2) 
        button.btn.large.btn-custom-twitter(style="font-size:24px;font-weight:bold;")
          i.fa.fa-twitter-square
          | Tweet


      p.roadgeek
        | 3) SEE THE PROJECT
        br
        br

      p.video-link(style="display:none;")
        | Watch the video to learn how it works
        i.fa.fa-play


  div.row-fluid.rfcx-row-gradient.rfcx-row.rfcx-row-intro-what
    div.fb-like(data-layout="box_count", data-action="like", data-show-faces="false", data-share="false", data-href="http://www.huffingtonpost.com/2013/06/10/rainforest-connection-cell-phone-deforestation_n_3416288.html")


